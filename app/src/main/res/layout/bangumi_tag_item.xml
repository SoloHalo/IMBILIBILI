<?xml version="1.0" encoding="utf-8"?>
<com.cql.imbilibili.widget.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <com.cql.imbilibili.widget.ScalableImageView
        android:id="@+id/cover"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:aspectRadioHeight="1"
        app:aspectRadioWidth="1"
        android:background="@drawable/ic_card_border"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="@dimen/item_spacing"
        android:layout_gravity="center"/>

</com.cql.imbilibili.widget.ForegroundLinearLayout>